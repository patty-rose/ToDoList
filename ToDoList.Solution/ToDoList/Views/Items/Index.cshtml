<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My To-Do List!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using ToDoList.Models; 
    @* using directive needed to call on item object *@
    
    <h1>To Do List</h1>
    @if (Model.Count == 0)
      {
        <p>There are no items in the list.</p>
      }
    <ul>
      @foreach (Item item in Model)
      {
        <li><a href='/items/@item.Id'>@item.Description</a></li>
      }

      @* <li>@Model.Description</li>  *@
      @* displays property of starterItem object we passed into View() in the HomeController *@
    </ul>
    <a href="/items/new">Add a new item.</a>

    <form action="/items/delete" method="post">
      <button type="submit" name="button">Clear All Items</button>
    </form> 
    @* Notice this button resides in <form> tags. It's not a standalone <button> element. Only forms can submit and use the POST method required to update the server *@
  </body>
</html>
